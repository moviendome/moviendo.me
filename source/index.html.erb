---
title: Learn, Build & Travel | Based in Thailand
pageable: true
per_page: 20
---

<% page_articles.each do |article| %>
  <% unless article.tags.include?("draft") %>
    <% if article.date > Time.new(2022, 01, 01) %>
      <div class="post">
        <h6 class="subtitle is-7 is-uppercase"><time><%= article.date.strftime('%b %e, %Y') %></time></h6>

        <div class="tags">
          <% article.tags.each do |tag| %>
            <span class="tag is-light is-uppercase"><%= tag %></span>
          <% end %>
        </div>

        <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
        <p><%= article.summary %></p>

        <% if article.data.ig.present? %>
          <p class="has-text-centered mt-6">
            <a href="<%= article.data.ig %>" target="_blank">
              <%= image_tag('icons/instagram.svg', width: '30px') %>
            </a>
          </p>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>


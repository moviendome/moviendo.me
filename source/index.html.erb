---
title: Building with Web3 & React | Based in Thailand
pageable: true
per_page: 20
---

<% page_articles.each do |article| %>
  <% unless article.tags.include?("draft") %>
    <% if article.date > Time.new(2022, 01, 01) %>
      <div class="post">
        <h6 class="subtitle is-7 is-uppercase"><time><%= article.date.strftime('%b %e, %Y') %></time></h6>

        <div class="tags">
          <% article.tags.each do |tag| %>
            <span class="tag is-light is-uppercase"><%= tag %></span>
          <% end %>
        </div>

        <% if article.data.image.present? %>
          <p class="highlight">
            <a href="<%= article.url %>">
              <%= image_tag(article.data.image) %>
            </a>
          </p>

          <% if article.data.ig.present? %>
            <p class="has-text-centered mt-6">
              <a href="<%= article.data.ig %>" target="_blank">
                <%= image_tag('icons/instagram.svg', width: '30px') %>
              </a>
            </p>

            <% if article.data.address.present? %>
              <div class="notification">
                <p class="content is-small has-text-centered">
                  <strong><%= article.data.title %></strong>
                  <br />
                  <a class="subtitle is-6" href="<%= article.data.address_url %>" target="_blank">
                    <%= article.data.address %>
                  </a>
                </p>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h2><a href="<%= article.url %>"><%= article.title %></a></h2>
        <% end %>
        <hr />
      </div>
    <% end %>
  <% end %>
<% end %>


---
title: A Developer, Author, Creator and Blogger based in Thailand
pageable: true
per_page: 20
---

<% page_articles.each do |article| %>
  <% unless article.tags.include?("draft") %>
    <div class="post">
      <h6 class="subtitle is-6 is-uppercase"><time><%= article.date.strftime('%b %e, %Y') %></time></h6>

      <div class="tags">
        <% article.tags.each do |tag| %>
          <span class="tag is-light is-uppercase"><%= tag %></span>
        <% end %>
      </div>

      <h1>
        <a href="<%= article.url %>">
          <%= article.title %>
        </a>
      </h1>

      <%= article.summary(500) %>
      <p class="has-text-centered">
      <%= link_to "Read more", article, class: "button is-small is-uppercase" %>
      </p>
    </div>
  <% end %>
<% end %>

<% if paginate %>
  <nav class="pagination is-centered" role="navigation" aria-label="pagination">
    <ul class="pagination-list">
      <% if prev_page %>
        <%= link_to 'Previous', prev_page, class: "pagination-previous" %>
      <% end %>
      <% if next_page %>
        <%= link_to 'Next page', next_page, class: "pagination-next" %>
      <% end %>
    </ul>
  </nav>
<% end %>

<p class="has-text-centered mt-6">
  <a href="https://twitter.com/moviendo_me" target="_blank">
    <%= image_tag('icons/twitter.svg', width: '30px') %>
  </a>
</p>
